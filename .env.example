# Environment variables for Trademark Search Web Application
# Copy this file to .env and update the values

# Flask configuration
SECRET_KEY=your-secret-key-change-in-production-use-random-string
FLASK_ENV=production

# Chrome configuration (for headless mode in production)
HEADLESS=true

# Server configuration
HOST=0.0.0.0
PORT=5000

# SSL configuration (for production with domain)
DOMAIN=your-domain.com
EMAIL=admin@your-domain.com

# Database configuration (if adding database in future)
# DATABASE_URL=postgresql://user:password@localhost/trademark_search

# Redis configuration (if adding caching in future)
# REDIS_URL=redis://localhost:6379/0

# Logging configuration
LOG_LEVEL=INFO

# Security settings
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Application settings
MAX_SEARCH_RESULTS=500
SEARCH_TIMEOUT=600